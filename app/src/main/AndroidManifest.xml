<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isaaclyman.humanbingo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/CustomMenu"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".NewGame"
            android:label="@string/title_activity_new_game"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EnterCode"
            android:label="@string/title_activity_enter_code"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".GameScreen"
            android:label="@string/title_activity_game_screen"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CustomMenu" />
        <activity
            android:name=".CreditsScreen"
            android:label="@string/title_activity_credits"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>
